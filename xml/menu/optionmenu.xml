<mainmenu background="background_menu" cursor="cursor.xml" music='la maryjane - bob wizman.ogg'>
    <title text="Opciones" font="cheesebu" size="35" r="0" g="0" b="0" x="150" y="50"/>
    <images>
        <image image_code="separator_line" x="0" y="270" scale="1"></image>
        <image image_code="logo_menu" x="550" y="7" scale="0.38"></image>
        <image image_code="logo_option" x="30" y="15" scale="1"></image>
    </images>
    <!--line image_code="separator_line" x="0" y="240"/>
    <logo image_code="logo_menu" x="130" y="5"/-->
    <options>
        <option type="image_button" xml_file="menu/boxbutton.xml" font="cheesebu" text="Sonido" image="icon_sound" image_x="10" image_y="10" center="True" x="225" y="175"></option>
        <option type="image_button" xml_file="menu/boxbutton.xml" font="cheesebu" text="Pantalla" image="icon_screen" image_x="10" image_y="10" center="True" x="400" y="175"></option>
        <option type="image_button" xml_file="menu/boxbutton.xml" font="cheesebu" text="Controles" image="icon_controls" image_x="10" image_y="10" center="True" x="570" y="175"></option>
        <option type="normal" xml_file="menu/genericbutton.xml" font="cheesebu" text="Aceptar" center="True" x="550" y="550"></option>
        <option type="normal" xml_file="menu/genericbutton.xml" font="cheesebu" text="Cancelar" center="True" x="700" y="550"></option>
    </options>
    <layers>
        <layer name="Sonido" font_code="cheesebu" size="30">
            <texts>
                <text value="Efectos de sonido" x="70" y="325"/>
                <text value="Música" x="70" y="385"/>
                <text value="Silenciar todo" x="70" y="445"/>
            </texts>
            <sliders>
                <slider xml_file="menu/slider.xml" x="350" y="340"/>
                <slider xml_file="menu/slider.xml" x="350" y="400"/>
            </sliders>
            <checkboxes>
                <checkbox xml_file="menu/checkbox.xml" font="cheesebu" show_text='false' text="silenciar" image_code="check" image_x="0" image_y="0" center="True" x="370" y="460"/>
            </checkboxes>
        </layer>
        <layer name="Pantalla" font_code="cheesebu" size="30">
            <texts>
                <text value="Resolución:" x="70" y="325"/>
                <text value="Pantalla completa" x="100" y="380"/>
            </texts>
            <checkboxes>
                <checkbox xml_file="menu/checkbox.xml" font="cheesebu" show_text='false' text="silenciar" image_code="check" image_x="0" image_y="0" center="True" x="400" y="390"/>
            </checkboxes>
        </layer>
        <layer name="Controles" font_code="cheesebu" size="30">
            <texts>
                <!--text value="Opciones de controles" x="70" y="325"/-->
                <text value="Dirección" x="100" y="325"/>
                <text value="Lanzar items" x="100" y="380"/>
                <text value="Menú de pausa" x="100" y="445"/>
            </texts>
            <buttons>
                <button type="normal" xml_file="menu/tinyrowrightbutton.xml" font="cheesebu" text="DerechaDireccion" show_text='false' center="True" x="450" y="335"></button>
                <button type="normal" xml_file="menu/tinyrowrightbutton.xml" font="cheesebu" text="DerechaItem" show_text='false' center="True" x="450" y="390"></button>
                <button type="normal" xml_file="menu/tinyrowrightbutton.xml" font="cheesebu" text="DerechaPausa" show_text='false' center="True" x="450" y="455"></button>
            </buttons>
            <images_layer>
                <image_layer image_code='rows' x='300' y='300'></image_layer>
                <image_layer image_code='letters' x='300' y='300'></image_layer>
                <image_layer image_code='enter' x='300' y='370'></image_layer>
                <image_layer image_code='space' x='300' y='370'></image_layer>
                <image_layer image_code='p' x='320' y='430'></image_layer>
                <image_layer image_code='esc' x='320' y='430'></image_layer>
            </images_layer>
        </layer>
    </layers>
</mainmenu>
